<div class="mb-5 mt-3">
   <%= live_render(@conn, TodayWeb.TagLive.New) %>
    <div class="row">
      <div class="col-md-12">
        <ul class="list-group">
            <%= for tag <- @tags do %>
              <li class="list-group-item">
                <div class="row">
                    <div class="col-lg-6">
                        <span>
                            <%= tag.name %>
                        </span>
                    </div>
                    <div class="col-lg-6">
                        <div class="btn-group pull-right btn-group-sm" role="group">
                           <%= link "Show", to: Routes.tag_path(@conn, :show, tag.id), class: "btn btn-primary" %>
                           <%= link "Edit", to: Routes.tag_path(@conn, :edit, tag.id), class: "btn btn-warning" %>
                           <%= link "Delete", to: Routes.tag_path(@conn, :delete, tag.id), class: "btn btn-danger", method: :delete, data: [confirm: "Are you sure?"] %>
                        </div>
                        <div class="pull-right text-success mr-3"><span>My posts: <%= posts_count(tag.posts, @current_user.id) %></span></div>
                        <div class="pull-right text-secondary mr-3"><span>Posts: <%= posts_count(tag.posts) %></span></div>
                    </div>
                </div>
              </li>
            <% end %>
        </ul>
      </div>
    </div>
</div>